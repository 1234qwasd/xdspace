<%-
   include('../templates/headers', {
      title: 'Online Fwiends',
      css: `
      .allfwiedsItem div img {
        width: calc(100% - 20px);
        max-height: 300px
      }
      `
   });
%>
<body style="padding: 20px; padding-top: 70px">
   <div id="container">
      <%- include('../templates/nav') %>
      <div class="allfwieds">
         <a href="/?id=<%= req.viewer ? req.viewer.id: 1 %>">&lt; Go Back</a>
         <h2>Online Fwiends (<%= online.length %>)</h2>
         <p style="margin-bottom: 20px;"><i>This page displays the last active users.</i></p>
         <% for(let user of online) { %>
         <div class="allfwiedsItem">
            <a href="/?id=<%= user.id %>">
               <b><%= user.name %></b>
               <div><img src="/u/<%= user.id %>/avatar"></div>
               <img class="online" src="/img/online.gif">
            </a>
         </div>
         <% } %>
      </div>

      <%- include('../templates/footer') %>
   </div>
</body>
</html>
